@model Quoc_2210900119.Models.DonHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<style>
    .order-details {
        background-color: #e9f5e9; /* Màu nền tương tự với form */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

        .order-details h4 {
            color: #155724;
            font-weight: bold;
            text-align: center;
        }

        .order-details hr {
            border-top: 2px solid #155724;
            margin-bottom: 1.5rem;
        }

        .order-details .dl-horizontal dt {
            font-weight: bold;
            color: #155724;
            width: 120px;
            float: left;
            clear: left;
            text-align: right;
            margin-right: 10px;
            transition: color 0.3s ease; /* Hiệu ứng chuyển màu */
        }

        .order-details .dl-horizontal dd {
            margin-left: 140px;
            color: #333;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease, transform 0.3s ease; /* Hiệu ứng nền và phóng to */
        }

            .order-details .dl-horizontal dd:hover {
                background-color: #f8f9fa; /* Nền sáng khi hover */
                transform: scale(1.02); /* Phóng to nhẹ khi hover */
            }

            .order-details .dl-horizontal dd:last-of-type {
                border-bottom: none;
            }

        /* Hiệu ứng cho các nhãn khi hover */
        .order-details .dl-horizontal dt:hover {
            color: #218838; /* Đổi màu khi hover */
            cursor: pointer; /* Thay đổi con trỏ */
            text-decoration: underline; /* Gạch chân khi hover */
        }

    .form-actions {
        text-align: center; /* Canh giữa các nút */
        margin-top: 20px; /* Khoảng cách trên */
    }

        .form-actions .btn {
            margin: 0 10px; /* Khoảng cách giữa các nút */
        }
</style>



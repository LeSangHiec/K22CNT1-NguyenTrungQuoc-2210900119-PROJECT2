@model Quoc_2210900119.Models.LoginModel

@{ 
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
    }


<div class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4"> Đăng nhập </h3></div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                    <authentication mode="Forms">
                                        <form class="form-group">
                                            <div class="form-floating mb-3">
                                                @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })
                                                <label for="inputPassword">Email</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                <label for="inputPassword">Mật khẩu</label>
                                            </div>
                                            <p class="text-danger">@ViewBag.Fail</p>
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <a class="small" href="#">Quên mật khẩu?</a>
                                                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </authentication>
                                            }
                                    </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="/User/Dangky">Chưa có tài khoản? Đăng ký!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</div>


<style>
    .delete-confirmation {
        background-color: #e9f5e9; /* Nền đỏ nhạt */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 20px auto;
    }

        .delete-confirmation h2 {
            color: #721c24;
            text-align: center;
        }

        .delete-confirmation h3 {
            color: #721c24;
            text-align: center;
            margin-bottom: 20px;
        }

        .delete-confirmation hr {
            border-top: 2px solid #721c24;
            margin-bottom: 1.5rem;
        }

        .delete-confirmation dl {
            margin: 0;
        }

        .delete-confirmation dt {
            font-weight: bold;
            color: #721c24;
        }

        .delete-confirmation dd {
            margin-left: 20px;
            color: #333;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease, transform 0.3s ease; /* Hiệu ứng cho dd */
        }

            .delete-confirmation dd:hover {
                background-color: #f5c6cb; /* Nền sáng khi hover */
                transform: scale(1.02); /* Phóng to nhẹ khi hover */
            }

        .delete-confirmation .form-actions {
            text-align: center;
            margin-top: 20px;
        }

            .delete-confirmation .form-actions input,
            .delete-confirmation .form-actions a {
                margin: 0 10px;
            }
</style>

<div class="delete-confirmation">

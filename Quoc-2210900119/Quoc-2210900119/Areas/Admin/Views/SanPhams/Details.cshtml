@model Quoc_2210900119.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<style>
    .product-container {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .product-details {
        background-color: #e9f5e9;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
    }

        .product-details h4 {
            color: #155724;
            font-weight: bold;
            text-align: center;
        }

        .product-details hr {
            border-top: 2px solid #155724;
            margin-bottom: 1.5rem;
        }

        .product-details .dl-horizontal dt {
            font-weight: bold;
            color: #155724;
            width: 120px;
            float: left;
            clear: left;
            text-align: right;
            margin-right: 10px;
            transition: color 0.3s ease;
        }

        .product-details .dl-horizontal dd {
            margin-left: 140px;
            color: #333;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .product-details .dl-horizontal dd:hover {
                background-color: #f8f9fa;
                transform: scale(1.02);
            }

            .product-details .dl-horizontal dd:last-of-type {
                border-bottom: none;
            }

        .product-details .dl-horizontal dt:hover {
            color: #218838;
            cursor: pointer;
            text-decoration: underline;
        }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

        .form-actions .btn {
            margin: 0 10px;
        }
    .product-image {
        width: 100%; /* Chiếm đầy chiều rộng của khung */

        height: 100%;
        margin: 0;
        background-size: cover;
    }
   

</style>

<div class="product-container">
    <div class="product-details">
        <h4>Ảnh sản phẩm</h4>
        <h3>Ảnh</h3>
            <img src="@Model.AnhSP" class="product-image" style="height:300px; width:300px" />
    </div>
    <div class="product-details">
        <h4>Sản Phẩm</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.TenSP)</dt>
            <dd>@Html.DisplayFor(model => model.TenSP)</dd>

            <dt>@Html.DisplayNameFor(model => model.GiaBan)</dt>
            <dd>@Html.DisplayFor(model => model.GiaBan)</dd>

            <dt>@Html.DisplayNameFor(model => model.Soluong)</dt>
            <dd>@Html.DisplayFor(model => model.Soluong)</dd>

            <dt>@Html.DisplayNameFor(model => model.MoTa)</dt>
            <dd>@Html.DisplayFor(model => model.MoTa)</dd>

            

            <dt>@Html.DisplayNameFor(model => model.LoaiHang.TenLoai)</dt>
            <dd>@Html.DisplayFor(model => model.LoaiHang.TenLoai)</dd>

            <dt>@Html.DisplayNameFor(model => model.NhaCungCap.TenNCC)</dt>
            <dd>@Html.DisplayFor(model => model.NhaCungCap.TenNCC)</dd>
        </dl>
        <p class="form-actions">
            @Html.ActionLink("Edit", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </p>
    </div>
</div>
